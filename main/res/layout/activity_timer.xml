<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_timer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gymtyme.flex30.timer.TimerActivity">

    <TextView
        android:id="@+id/textView2"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:text="@string/rest_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop = "5dp"
        android:background="#e60000"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:gravity="center" />

    <Button
        android:id="@+id/cancel"
        android:text="@string/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop = "5dp"
        android:onClick="gotoBackPage"
        android:background="#e60000"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"/>


    <Button
        android:text="Pause"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop = "5dp"
        android:background="#e60000"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pause"
        android:onClick="pauseTimer"
        android:layout_above="@+id/cancel"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop = "5dp"
        android:background="#e60000"
        android:textColor="#ffffff"
        android:id="@+id/start"
        android:onClick="startTime"
        android:layout_above="@+id/pause"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="00"
        android:gravity="center"
        android:textSize="80sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberSets"
        android:textSize="32sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exercise_name_timer"
        android:textSize="32sp"
        android:layout_above="@+id/numberSets"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repNumber"
        android:textSize="32sp"
        android:layout_below="@+id/numberSets"
        android:layout_alignEnd="@+id/start" />

</RelativeLayout>
